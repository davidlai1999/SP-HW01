void readFile ( vector<Data> &dataVector, string & fileName ) {
	fstream binFile ;
	Data oneSt ;
	string returnName ;
	Data temp ;
	int dataNo = 0 ;
	bool isInput = false ;
	
	while( isInput == false ) {

		cout << "input a file numberï¼š" ;
		cin >> fileName ;
		binFile.open(("pairs" + fileName + ".bin").c_str(), fstream::in ) ;
		if ( binFile.is_open() ) 
			isInput = true ;
			
		binFile.close() ;
	}
	returnName = fileName ;
	fileName = "pairs" + fileName +".bin" ;
	binFile.open(fileName.c_str(), fstream::in | fstream::binary ) ;
	if ( binFile.is_open() ) {
		binFile.seekg( 0,binFile.end ) ;
		dataNo = binFile.tellg() ;
		binFile.seekg( 0, binFile.beg ) ;
		for ( int i = 0 ; i < dataNo ; i++ ) {
			binFile.read( ( char* )&oneSt, sizeof( oneSt ) ) ;
			strcpy( temp.token, oneSt.token ) ;
			dataVector.push_back( temp ) ;
		} // for
	} // if
	binFile.close() ;
	fileName = returnName ;
} // readFile()
